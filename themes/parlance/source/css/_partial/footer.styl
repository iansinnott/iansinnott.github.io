#footer
  background: color-footer-background
  padding: 10px 0
  border-top: 1px solid color-border
  color: color-grey
  width calc(100% - 60px)
  @media mq-mobile
    width 100%

  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em
  margin 0

  @media mq-mobile
    text-align center

