.Post
  max-width 700px

  :global(.callout)
    margin-bottom 1.45rem
    // background rgba(3, 185, 255, 0.31)
    background rgba(255, 236, 3, 0.36)
    border-radius 5px
    padding 20px

.meta
  p
    display inline-block
    +below(360px)
      display block
      margin-bottom .5em
      &.middot
        display none

.timeToRead
.date
  font-family 'Helvetica Neue', Helvetica, sans-serif
  opacity .6

.PostNav
  a
    &:not(:last-child)
      margin-right 10px
